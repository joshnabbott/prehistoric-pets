<h1>New product</h1>

<% form_for([:admin, @category, @product], :html => { :multipart => true }) do |f| %>
  <fieldset>
    <%= render :partial => 'form', :locals => { :f => f } %>
    <p>
      <%= f.submit "Create", :class => 'submit' %> - or - <%= link_to 'Cancel', @category ? admin_category_products_url : admin_products_url %>
    </p>
  </fieldset>
<% end %>

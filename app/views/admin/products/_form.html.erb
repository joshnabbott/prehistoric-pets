<%= f.error_messages %>

<p>
  <%= f.label :category_ids %>
  <%= f.collection_select :category_ids, Category.find(:all), :id, :name, {}, { :multiple => true } %>
</p>
<p>
  <%= f.label :image_file %>
  <%= f.file_field :image_file %>
  <%= f.hidden_field :image_file_temp %>
</p>
<%- if @product.has_image? -%>
  <p>
    Current image:
    <%= image_tag(cropped_product_image_path(@product, '100x100', :jpg), :alt => @product.name) if @product.has_image?  %>
  </p>
<%- end -%>
<p>
  <%= f.label :name %>
  <%= f.text_field :name, :class => 'text_field' %>
</p>
<p>
  <%= f.label :scientific_name %>
  <%= f.text_field :scientific_name, :class => 'text_field' %>
</p>
<p>
  <%= f.label :sku %>
  <%= f.text_field :sku, :class => 'text_field' %>
</p>
<p>
  <%= f.label :description %>
  <%= f.text_area :description %>
</p>
<p>
  <%= f.label :comments %>
  <%= f.text_area :comments %>
</p>
<p>
  <%= f.label :price %>
  <%= f.text_field :price, :class => 'text_field' %>
</p>
<p>
  <%= f.label :override %>
  <%= f.check_box :override, :class => 'check_box' %>
</p>
<p>
  <%= f.label :is_active %>
  <%= f.check_box :is_active, :class => 'check_box' %>
</p>
<p>
  <%= f.label :is_featured %>
  <%= f.check_box :is_featured, :class => 'check_box' %>
</p>
<p>
  <%= f.label :caresheet_id %>
  <%= f.collection_select :caresheet_id, Caresheet.active, :id, :name, :include_blank => true %>
</p>
<p>
  <%= f.label :post_o_matisize, 'Post-O-Matisize?' %>
  <%= f.check_box :post_o_matisize, :class => 'check_box' %>
</p>

<%- f.fields_for :post_o_matic_postings, @product.post_o_matic_postings.build do |post_o_matic_posting| -%>
  <div id="post_o_matic_posting" class="hide">
    <p>
      <%= post_o_matic_posting.label :post_o_matic_category_id, 'Category' %>
      <%= post_o_matic_posting.collection_select :post_o_matic_category_id, PostOMaticCategory.find(:all, :order => 'name asc'), :id, :name, :include_blank => true %>
    </p>
    <p>
      <%= post_o_matic_posting.label :ad_duration %>
      <%= post_o_matic_posting.select :ad_duration, [[], ['2 days', 2], ['7 days', 7], ['15 days', 15], ['30 days', 30]] %>
    </p>
  </div>
<%- end -%>
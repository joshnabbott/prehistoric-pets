<%- @page_title = @product.name -%>
<div class="product">
  <h2><%= @product.name %></h2>
  <p class="image"><%= link_to(image_tag(product_thumbnail_product_path(@product)), formatted_product_path(@product, :jpg), :rel => 'facebox') %></p>
  <%= textilize(@product.description) %>
  <p class="price"><%= number_to_currency(@product.price) %></p>
</div>
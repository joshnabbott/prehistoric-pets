  <div id="content_container">
    <div id="top_left"></div>
    <div id="top_right"></div>
    <div id="content">
      <%= render_flash_messages %>
      <%= yield %>
    </div>
    <div id="bottom_left"></div>
    <div id="bottom_right"></div>
  </div>

  <div id="footer">
